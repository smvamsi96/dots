#All my Shell funcs go here

redir () {			#Just renames the directory or deletes it if there is no second argument
	
	if [ "$#" -ne "1" || "$#" -ne "2" ]; then
		echo "Usage: redir existing_directory new_directory";
	else
		if [ "$#" -eq "2" ]; then
			mkdir $2;
			mv $1/* $2/;
		fi
		rm -rf $1;
	fi
}


oui () {
	
	echo "$1 belongs to:"
	curl "https://api.macvendors.com/$1"
	echo "\n"
}

co () {
	cd ${HOME}/Code/$1
}

open-posts () {
	vi $HOME/code/dickie-moser/_posts/*
}

new-post () {
	vi $HOME/code/dickie-moser/_posts/$1
}

gcamp () {
	gcam "$1" && gip master
}


jlog () {
	separator="------------------------------"
	date_today=$(date +"%Y-%m-%d")
	time_now=$(date  +"%H:%M:%S")
	journal_path="${HOME}/Code/journal"
	echo "${separator}\n${time_now}\n${separator}" >> "${journal_path}/${date_today}.j"
	vi ${journal_path}/${date_today}.j
	echo "\n" >> "${journal_path}/${date_today}.j"

}
